{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "jquery": true
    },
    "overrides": [
        {
            "files": [
                "resources/assets/js/**/*.{js,vue}"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:vue/vue3-recommended"
            ],
            "rules": {
                "vue/html-indent": ["error", 4],
                "indent": [
                    "error",
                    4
                ],
                "semi": [
                    "error",
                    "always"
                ],
                "quotes": [
                    "error",
                    "single",
                    {
                        "allowTemplateLiterals": true
                    }
                ]
            }
        }
    ]
}